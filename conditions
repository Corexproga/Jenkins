pipeline {
    agent any
    stages {
        stage("build") {
          steps{
            script{
              if(env.BRANCH_NAME == 'jenkins_branch') {
                  echo 'Hello from branch'
              }
              else {
                  sh "echo 'Hello from ${env.BRANCH_NAME} branch!"
              }
            }
          }
        }
        stage("test") {
            when{
                expression{
                    params.ENVIR == 'dev'
                }
            }
            steps{
                echo 'dev environment ok'
            }
        }
    }
}
